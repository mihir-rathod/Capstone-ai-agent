# Example environment variables for Capstone-ai-agent
# Copy this file to `.env` and fill in the values. DO NOT commit real secrets.

# -------------------------------
# Database configuration
# -------------------------------
# Hostname or service name for MySQL (in docker-compose it's `db`)
MYSQL_HOST=localhost
# Database user
MYSQL_USER=database_user
# Database password (replace with a secure value)
MYSQL_PASSWORD=change_me
# Database name
MYSQL_DATABASE=database_name
# Database port
MYSQL_PORT=3306

# -------------------------------
# AWS Settings (for S3 only)
# -------------------------------
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-east-2

# -------------------------------
# Email Settings (SMTP)
# -------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_EMAIL=your_email@gmail.com

# -------------------------------
# Gemini / Google / Ollama keys
# -------------------------------
# Google API key (if using Google Generative APIs)
GOOGLE_API_KEY=
# Ollama API key (if required by your flows)
OLLAMA_API_KEY=

# Ollama service URL (default is the public site; change if self-hosted)
OLLAMA_API_URL=https://ollama.com

# -------------------------------
# Model / runtime settings
# -------------------------------
# Number of retries for network calls
MAX_RETRIES=3
# Enable parallel generation (true/false)
PARALLEL_GENERATION=true
# Generation timeout (seconds)
GENERATION_TIMEOUT=30

# -------------------------------
# Validation settings
# -------------------------------
# Minimum consistency score required (0.0 - 1.0)
MIN_CONSISTENCY_SCORE=0.8
# Require dual validation step (true/false)
REQUIRE_DUAL_VALIDATION=true

# Add additional variables here (e.g., OLLAMA_MODEL, LOG_LEVEL) as needed.